  Redirect 301 /pre-school-in-shikaripur.html https://arkakids.com/locations/pre-school-in-shikaripur.html
  Redirect 301 /pre-school-in-thanjavur.html https://arkakids.com/locations/pre-school-in-thanjavur.html
  Redirect 301 /pre-school-in-valasaravakkam.html https://arkakids.com/locations/pre-school-in-valasaravakkam.html

  Redirect 301 /nursery-school-in-adyar.html https://arkakids.com/locations/nursery-school-in-adyar.html
  Redirect 301 /nursery-school-in-ayyapakkam.html https://arkakids.com/locations/nursery-school-in-ayyapakkam.html
  Redirect 301 /nursery-school-in-chitlapakkam.html https://arkakids.com/locations/nursery-school-in-chitlapakkam.html
  Redirect 301 /nursery-school-in-chrompet.html https://arkakids.com/locations/nursery-school-in-chrompet.html
