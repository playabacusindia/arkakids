  Redirect 301 /nursery-school-in-valasaravakkam.html https://arkakids.com/locations/nursery-school-in-valasaravakkam.html

  # Fix typo/duplicate issues
  Redirect 301 /locations/nursery-school-in-Irumbuliyur.html https://arkakids.com/locations/nursery-school-in-irumbuliyur.html
  Redirect 301 /locations/nursery-school-in-irumbulliyur.html https://arkakids.com/locations/nursery-school-in-irumbuliyur.html
